# HireHub Ethiopia - Production Environment Configuration
# Copy this file to .env.docker for production deployment

# ===========================================
# SERVER CONFIGURATION
# ===========================================
NODE_ENV=production
PORT=4000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# Use Neon DB or any PostgreSQL instance for production
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://hirehub_user:your_secure_password@your-db-host:5432/hirehub_production

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_64_chars_minimum
JWT_EXPIRES_IN=7d

# ===========================================
# EMAIL SERVICE CONFIGURATION
# ===========================================
# Gmail App Password (enable 2FA first)
GMAIL_USER=your_production_email@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password

# Alternative SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_production_email@gmail.com
SMTP_PASS=your_gmail_app_password

# ===========================================
# CHAT ENCRYPTION
# ===========================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
CHAT_ENCRYPTION_KEY=your_32_byte_hex_string_for_chat_encryption

# ===========================================
# PAYMENT GATEWAY (CHAPA)
# ===========================================
# Get production keys from https://dashboard.chapa.co/
CHAPA_SECRET_KEY=CHASECK_LIVE-your_production_secret_key
CHAPA_PUBLIC_KEY=CHAPUBK_LIVE-your_production_public_key

# ===========================================
# APPLICATION URLs
# ===========================================
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com
AUTH_HUB_URL=https://auth.your-domain.com
EMPLOYER_PORTAL_URL=https://employer.your-domain.com
ADMIN_PORTAL_URL=https://admin.your-domain.com

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/hirehub.log

# ===========================================
# MONITORING & HEALTH CHECKS
# ===========================================
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ===========================================
# CORS CONFIGURATION
# ===========================================
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com,https://auth.your-domain.com

# ===========================================
# BACKUP CONFIGURATION
# ===========================================
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===========================================
# SECURITY HEADERS
# ===========================================
HELMET_ENABLED=true
CSP_ENABLED=true

# ===========================================
# PERFORMANCE TUNING
# ===========================================
# Database connection pool
DB_POOL_MAX=20
DB_POOL_MIN=5
DB_POOL_ACQUIRE=30000
DB_POOL_IDLE=10000

# Memory limits
NODE_MAX_MEMORY=1G
