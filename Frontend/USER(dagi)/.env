# Environment configuration for HireHub User Frontend

# API Configuration - Unified Backend on Port 4000
VITE_API_BASE_URL=http://localhost:4000
VITE_AUTH_API_BASE_URL=http://localhost:4000
VITE_PAYMENT_API_BASE_URL=http://localhost:4000
VITE_DEBUG=true

# Token configuration
VITE_TOKEN_STORAGE_KEY=hirehub_token
VITE_REFRESH_TOKEN_STORAGE_KEY=hirehub_refresh_token

# Auth Hub URL - Centralized Authentication (CORRECTED Port)
VITE_AUTH_HUB_URL=http://localhost:3002

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx
VITE_ALLOWED_IMAGE_TYPES=.jpg,.jpeg,.png,.gif

# Application Settings
VITE_APP_NAME=HireHub Ethiopia
VITE_APP_VERSION=1.0.0
VITE_ITEMS_PER_PAGE=20

# Development Settings
VITE_DEBUG=true
VITE_LOG_LEVEL=debug