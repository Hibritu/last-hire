# HireHub Ethiopia - Employer Connect Pro Environment Configuration

# API Configuration - Unified Backend on Port 4000
VITE_AUTH_API_BASE_URL=http://localhost:4000
VITE_JOBS_API_BASE_URL=http://localhost:4000
VITE_PAYMENT_API_BASE_URL=http://localhost:4000
VITE_AUTH_HUB_URL=http://localhost:3002

# Token configuration for centralized auth
VITE_TOKEN_STORAGE_KEY=hirehub_token
VITE_REFRESH_TOKEN_STORAGE_KEY=hirehub_refresh_token

# Development and debug settings
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# File Upload Settings
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.jpg,.jpeg,.png
VITE_MAX_IMAGE_SIZE=5242880

# Application Settings
VITE_APP_NAME=HireHub Ethiopia - Employer Connect Pro
VITE_APP_VERSION=2.0.0
VITE_ITEMS_PER_PAGE=10

# Ethiopian Context
VITE_DEFAULT_CURRENCY=ETB
VITE_DEFAULT_LOCATIONS=Addis Ababa,Dire Dawa,Mekelle,Gondar,Awassa,Bahir Dar,Jimma,Jijiga,Shashamene,Arba Minch

# Redirect configuration
VITE_REDIRECT_AFTER_LOGIN=true
VITE_REDIRECT_DELAY=1500