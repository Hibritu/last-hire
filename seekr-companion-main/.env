# Seekr Companion - Centralized Authentication Hub
# Environment configuration for role-based redirects

# Backend API URLs
VITE_AUTH_API_BASE_URL=http://localhost:4000
VITE_JOBS_API_BASE_URL=http://localhost:4000
VITE_PAYMENT_API_BASE_URL=http://localhost:8080

# Frontend Application URLs for Redirects
VITE_USER_APP_URL=http://localhost:5173
VITE_EMPLOYER_APP_URL=http://localhost:3000
VITE_ADMIN_APP_URL=http://localhost:3001

# Authentication Settings
VITE_JWT_SECRET=your-jwt-secret-key
VITE_TOKEN_STORAGE_KEY=hirehub_token
VITE_REFRESH_TOKEN_STORAGE_KEY=hirehub_refresh_token

# Application Settings
VITE_APP_NAME=HireHub Ethiopia - Authentication Hub
VITE_APP_VERSION=1.0.0

# Role-based Redirect Configuration
VITE_REDIRECT_AFTER_LOGIN=true
VITE_REDIRECT_DELAY=1000

# Development Settings
VITE_DEBUG=true
VITE_LOG_LEVEL=debug

# Cross-app communication
VITE_ENABLE_SSO=true
VITE_SHARED_SESSION=true